<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.adesso.wieschalla.senses2go.AccActivity">

    <TextView
        android:text="Beschleunigung X Achse in m/qs:"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_width="270dp"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/text1"
        android:layout_width="150dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:text="Beschleunigung Y Achse in m/qs:"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/textView4"
        android:layout_width="270dp"
        android:textAllCaps="false"
        android:layout_below="@+id/text1"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/text2"
        android:layout_width="150dp"
        android:textAllCaps="true"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:text="Beschleunigung Z Achse in m/qs:"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textView5"
        android:layout_width="270dp"
        android:textAllCaps="false"
        android:layout_below="@+id/text2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/text3"
        android:layout_width="150dp"
        android:textAllCaps="true"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

</RelativeLayout>
